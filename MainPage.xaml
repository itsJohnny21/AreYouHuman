<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <StackLayout>
        <Button Text="Generate New Captcha" Clicked="OnLoadCaptchaClicked"/>

        <Image x:Name="CaptchaImage" WidthRequest="300" HeightRequest="300" />
        
        <Button Text="Show Encrypted Captcha" Clicked="OnShowEncryptedClicked" />
        <Label x:Name="EncryptedCaptcha" />

        <Label Text="Enter the captcha above to prove you are human!" FontSize="21" />
        <Entry x:Name="UserInput" Placeholder="Enter captcha here..." />

        <Button Text="Submit" Clicked="OnSubmitClicked" />
    </StackLayout>

</ContentPage>
