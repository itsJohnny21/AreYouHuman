<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <StackLayout>
        <Image x:Name="CaptchaImage" WidthRequest="300" HeightRequest="300" />

        <Button Text="Generate New Captcha" Clicked="OnLoadCaptchaClicked"/>

        <Label Text="Enter the text from the captcha" FontSize="30" />
        <Entry x:Name="UserInput" />

        <Button Text="Submit" Clicked="OnSubmitClicked" />
    </StackLayout>

</ContentPage>
